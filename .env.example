# Copy this file to .env and fill in your PostgreSQL connection string.

# PostgreSQL (server database) — required for Zaawiya
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public

# Example — local PostgreSQL:
# DATABASE_URL="postgresql://postgres:yourpassword@localhost:5432/zaawiya?schema=public"

# Example — Neon (free cloud): https://neon.tech — create project, copy connection string
# DATABASE_URL="postgresql://user:pass@ep-xxx.region.aws.neon.tech/neondb?sslmode=require"

# Example — Supabase: https://supabase.com — Project Settings → Database → connection string
# DATABASE_URL="postgresql://postgres.[ref]:[password]@aws-0-region.pooler.supabase.com:6543/postgres"

DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/zaawiya?schema=public"

# Admin (optional) — password to log in at /admin and delete any story
# Must be at least 8 characters. If not set, admin login will not work.
# ADMIN_PASSWORD="your-secret-admin-password"
ADMIN_PASSWORD=""
